{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*",  "dist", "**/*.js"],
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "target": "ESNext",
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
